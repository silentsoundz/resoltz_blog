    .blog-post-wrapper
      for post in posts
        .container.container-small-screen
          - const postDay = normalizeDay(post.post_date)
          - const postDayNum = normalizeDayNum(post.post_date)
          - const postMonth = normalizeMonth(post.post_date)
          - const postYear = normalizeYear(post.post_date)
          .postInfo
            .postTitle
              h1= post.title
              .titleUnderline
              .topicTag Health
              .imageBox
                img.blogImages(src=post.image_url)
              .imgDateSocialContainer
                .imgDateContainer
                  img(src="/img/ceo.png")
                  .dateBox
                    span.postDay.date
                      p=postDay
                    span.postDayNum.date
                      p=postDayNum
                    span.postMonth.date
                      p=postMonth
              .socialIconsTagsContainer
                .socialIcons
                 a(target="_blank" title="Follow me on Facebook" href="https://www.facebook.com/resoltz")
                  i(class="fa fa-facebook")
                 a(target="_blank" title="Follow me on Twitter" href="https://twitter.com/resoltz")
                  i(class="fa fa-twitter")
                 a(target="_blank" title="Follow me on Twitter" href="https://instagram.com/resoltz")
